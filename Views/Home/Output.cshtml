@using System.Web.Helpers
@model TwitterTweets.Models.Tweet
@{
    ViewBag.Title = "Output";
}

@{
    var tweets = (TwitterTweets.Models.Tweet[])ViewData[TwitterTweets.Models.TwitterSearchResult.PARAM_NAME];
    if (tweets == null || tweets.Count() == 0)
    {
        <p>No tweets found for the user.</p>
    }
    else
    {
        <p>Tweets of the user</p>
        <table>
            <tr>
                <th>Created Date</th>
                <th>Created time</th>
                <th>Tweet</th>
            </tr>
            @foreach (var tw in tweets)
            {
                <tr>
                    <td>@tw.DateTimeCreatedOn.ToString("yyyy-MM-dd", System.Globalization.CultureInfo.DefaultThreadCurrentCulture)</td>
                    <td>@tw.DateTimeCreatedOn.ToString("hh:mm", System.Globalization.CultureInfo.DefaultThreadCurrentCulture)</td>
                    <td>@tw.Text</td>
                </tr>
            }
        </table>
    }
}

